<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%=title%> </title>
    <link rel="stylesheet" href="/createPc.css">
  
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <h1>Edit your PC</h1>
        <%- include("partials/errors.ejs") %>
        <form method="POST" action="/create-pc">
          <div class="form-group">
            <label for="name">Name of PC:</label>
             <!-- pc[0].pc_name es el nombre del PC que se va a editar, lo traigo de la base de datos -->
            <input type="text" id="name" name="name" placeholder="Enter the name of your PC" value="<%= pc[0].pc_name%>" required>
          </div>
    
          <div class="form-group">
            <label for="cpu">CPU:</label>
            <select id="cpu" name="cpu" required>
              <option disabled selected hidden value="">-- Select a CPU --</option>
               <!-- se recorre components para meter en el option cada componente del tipo indicado -->
              <% components.forEach(component => { %>
                <% if (component.component_type === 'CPU') { %>
                    <!-- si component_id coincide con el component_id del pc accedido para editar por el usario, se marca esta opcion por default con selected-->
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[0].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="gpu">GPU:</label>
            <select id="gpu" name="gpu">
              <option disabled selected hidden value="">-- Select a GPU --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'GPU') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[1].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="ram">RAM:</label>
            <select id="ram" name="ram" required>
              <option disabled selected hidden value="">-- Select RAM --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'RAM') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[2].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="storage">Storage:</label>
            <select id="storage" name="storage" required>
              <option disabled selected hidden value="">-- Select Storage --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'Storage') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[3].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="motherboard">Motherboard:</label>
            <select id="motherboard" name="motherboard" required>
              <option disabled selected hidden value="">-- Select a Motherboard --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'Motherboard') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[4].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="psu">PSU:</label>
            <select id="psu" name="psu" required>
              <option disabled selected hidden value="">-- Select a PSU --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'PSU') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[5].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group">
            <label for="pcCase">Case:</label>
            <select id="pcCase" name="pcCase">
              <option disabled selected hidden value="">-- Select a Case --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'Case') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[6].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
          
          <div class="form-group full-width">
            <label for="cooler">Cooler:</label>
            <select id="cooler" name="cooler">
              <option disabled selected hidden value="">-- Select a Cooler --</option>
              <% components.forEach(component => { %>
                <% if (component.component_type === 'Cooler') { %>
                  <option value="<%= component.component_id %>" <%= component.component_id === pc[7].component_id ? 'selected' : '' %>><%= component.component_name %></option>
                <% } %>
              <% }) %>
            </select>
          </div>
    
          <button type="submit">Confirm</button>
        </form>
      </main>
</body>
</html>